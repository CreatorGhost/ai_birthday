# LLM Provider Configuration
# Choose between 'openai' or 'google_gemini'
LLM_PROVIDER=openai

# OpenAI API Configuration (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
# Available models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_CHAT_MODEL=gpt-4o-mini
# Available models: text-embedding-ada-002, text-embedding-3-small, text-embedding-3-large
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Google Gemini API Configuration (required if LLM_PROVIDER=google_gemini)
GOOGLE_API_KEY=your_google_api_key_here
# Available models: gemini-pro, gemini-1.5-pro, gemini-1.5-flash, gemini-2.0-flash-exp
GOOGLE_CHAT_MODEL=gemini-pro
# Available models: text-embedding-004, text-multilingual-embedding-002
GOOGLE_EMBEDDING_MODEL=text-embedding-004

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=faq-embeddings

# Bitrix CRM Integration (Optional)
BITRIX_WEBHOOK_URL=https://leoandloona.bitrix24.com/rest/1053/59q16yj96lksz7s2/
PINECONE_CRM_INDEX_NAME=bitrix-crm-index